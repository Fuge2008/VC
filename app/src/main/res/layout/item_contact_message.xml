<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_main_item"
    android:layout_height="match_parent">


    <com.saas.saasuser.view.CircleImageView
        android:id="@+id/iv_head_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_head_image"
        android:layout_gravity="center" />
    <ImageView
        android:id="@+id/iv_red_point"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="75dp"
        android:src="@drawable/icon_red_point"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="@color/app_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="申请联络"
        />
    <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginTop="7dp"
    android:layout_below="@+id/tv_title"
    android:background="#e3e3e3"/>
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_head_image"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_data1"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:text="日期：2017年10月12日   12:45"
                />
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
              android:textColor="@color/app_color"
                android:gravity="right"
                android:text="单状态"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_data2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:text="司机电话：132333655666"
            />
        <TextView
            android:id="@+id/tv_data3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:text="起点：深圳市南山区学府路2号"
            />
        <TextView
            android:id="@+id/tv_data4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:text="终点：东莞市樟木头镇南街8号"
            />
        <TextView
            android:id="@+id/tv_data5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:text="终点：东莞市樟木头镇南街8号"
            />
        <TextView
            android:id="@+id/tv_data6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="终点：东莞市樟木头镇南街8号"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/ll1"
        android:background="#e3e3e3"/>

</RelativeLayout>
