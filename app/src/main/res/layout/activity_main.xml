<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/view_head_title_head_more"></include>
    <com.saas.saasuser.view.NoScrollViewPager
        android:id="@+id/vp_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rg_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <RadioButton
                android:id="@+id/rb_menu_rent"
                style="@style/radioButton_home"
                android:drawableTop="@drawable/selector_menu_rent"
                android:text="租行" />

            <RadioButton
                android:id="@+id/rb_menu_near"
                style="@style/radioButton_home"
                android:drawableTop="@drawable/selector_menu_near"
                android:text="附近" />


            <RadioButton
                android:id="@+id/rb_menu_message"
                style="@style/radioButton_home"
                android:drawableTop="@drawable/selector_menu_message"
                android:text="消息" />

            <RadioButton
                android:id="@+id/rbr_menu_news"
                style="@style/radioButton_home"
                android:drawableTop="@drawable/selector_menu_news"
                android:text="新闻" />

            <RadioButton
                android:id="@+id/rbr_menu_mine"
                style="@style/radioButton_home"
                android:drawableTop="@drawable/selector_menu_my"
                android:text="我的" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>
