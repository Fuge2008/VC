<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:background="@null"
        android:id="@+id/tv_location"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="请选择所属地区"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColorHint="#CCCCCC"
        android:gravity="center_vertical"
        android:paddingLeft="90dp"/>

    <TextView
        android:background="@null"
        android:id="@+id/tv_locationname"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_location"
        android:layout_alignLeft="@+id/tv_location"
        android:layout_alignTop="@+id/tv_location"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:text="所属地区"
        android:drawablePadding="10dp"
        android:textSize="18sp"/>

    <View
        android:layout_below="@id/tv_locationname"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="13dp"
        android:background="#D8D8D8"/>

</RelativeLayout>