<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">


    <EditText
        android:id="@+id/edittext_phoneCode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:background="@null"
        android:layout_marginRight="@dimen/marginleft20"
        android:layout_marginLeft="@dimen/marginleft20"
        android:textColorHint="#CCCCCC"
        android:hint="请输入验证码"
        android:maxLength="11"
        android:paddingLeft="90dp"/>

    <TextView
        android:id="@+id/tv_sms2_code2"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edittext_phoneCode"
        android:layout_alignLeft="@+id/edittext_phoneCode"
        android:layout_alignTop="@+id/edittext_phoneCode"
        android:gravity="center_vertical"
        android:paddingLeft="13dp"
        android:text="验证码"
        android:drawablePadding="10dp"
        android:textSize="18sp"/>


    <Button
        android:id="@+id/btn_send_pwd"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:text="获取验证码"
        android:textSize="12sp"
        android:layout_marginRight="20dp"
        android:textColor="#333333"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:layout_alignRight="@+id/edittext_phoneCode"
        android:background="@drawable/send_tv_bg"
        android:clickable="true"/>

    <View
        android:layout_below="@id/tv_sms2_code2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="13dp"
        android:background="#D8D8D8"/>


</RelativeLayout>